[Unit]
Description=nodeapp

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull horaceheaven/directory-ionic-nodejs:%p
ExecStart=/usr/bin/docker run --rm --name %p -p %i:5000 horaceheaven/directory-ionic-nodejs:%p
ExecStartPost=/usr/bin/etcdctl set /app/%p/%i ${COREOS_PRIVATE_IPV4}:%i
ExecStop=/usr/bin/docker kill %p
ExecStopPost=/usr/bin/etcdctl rm /app/%p/%i

[X-Fleet]
X-Conflicts=%p@%i.service
